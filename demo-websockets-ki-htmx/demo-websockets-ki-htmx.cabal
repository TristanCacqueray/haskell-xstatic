      base < 5
    , lens
    , lens-aeson
    , bytestring
    , network
    , wai
    , warp
    , xstatic
    , xstatic-htmx
    , xstatic-remixicon
    , xstatic-tailwind
    , websockets
    , relude
    , ki
    , servant
    , servant-lucid
    , servant-server
    , servant-websockets
    , warp
    , lucid
    , lucid-htmx
  default-language: Haskell2010
